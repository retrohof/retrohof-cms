@page
@inject IHtmlLocalizer<AccountResource> L
@inject IHtmlLocalizer<IdentityResource> LI

@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.Account.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Theme.Basic
@using Volo.Abp.Identity.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Theming;
@model Volo.Abp.Account.Web.Pages.Account.ForgotPasswordModel

@inject IAgileCmsBrandingProvider Branding
@inject IThemeManager ThemeManager

@{
    var name = Branding.AppName;
    Layout = (name == "Local MDW" || name == "MDW" || name == "mdw") ? ThemeManager.CurrentTheme.GetLayout(MdwLayouts.Account)
    : ThemeManager.CurrentTheme.GetLayout(BasicLayouts.Account);
}

<div class="card mt-3 shadow-sm rounded">
    <div class="card-body p-5">
        <h4>@L["ForgotPassword"]</h4>
        <form method="post" class="mt-4">
            <p>@L["SendPasswordResetLink_Information"]</p>
            <abp-input asp-for="Email"/>
            <div class="d-grid gap-2">
                <abp-button button-type="Primary" type="submit" class="mt-2 mb-3">@L["Submit"]</abp-button>
            </div>
            <a asp-page="./Login" asp-all-route-data="@(new Dictionary<string, string> {{"returnUrl", Model.ReturnUrl}, {"returnUrlHash", Model.ReturnUrlHash}})">
                <i class="fa fa-long-arrow-left"></i> @L["Login"]
            </a>
        </form>
    </div>
</div>